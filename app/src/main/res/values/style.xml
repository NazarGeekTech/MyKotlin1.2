<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="img_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/input_tx_collection</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_below">@id/input_tx_collection</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>